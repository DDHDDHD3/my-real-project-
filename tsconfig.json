{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "scripts/**/*",
    "node_modules",
    "dist"
  ]
}